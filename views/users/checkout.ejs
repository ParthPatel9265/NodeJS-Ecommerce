  
<%- include ('../includes/header.ejs') %>


  <div class="container mt-3">
        <div class="jumbotron p-3">
            <div class="d-flex justify-content-around" style="font-size: 25px; ">
                <span>Checkout Details</span> 
            </div>
            <div class="container mt-2">
                <table class="table table-bordered bg-light table-responsive-sm">
                    <thead>
                      <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total Price per Book</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% user.carts.forEach(product=>{ %>
                                <tr>
                                    <td><img src="<%= product.book.image  %>" alt="Book Cover" class="img-thumbnail" style="height: 8rem; width: 8rem;"></td>
                                    <td><%= product.book.title  %> </td>
                                    <td>₹ <%= product.book.price  %> </td>
                                    <td>
                                        <%= product.quantity %> 
                                    </td>
                                    <td>
                                        ₹ <%= product.quantity * product.book.price  %> 
                                    </td>
                                </tr>
                        <% }) %>
                        <tr class="lead font-weight-bold text-info">
                            <td colspan="4">Total</td>
                            <td colspan="1"> ₹ <%= totalPrice  %> </td>
                        </tr>
                    </tbody>
                  </table>
                  <div class="text-center"> <a type="button" href="/user/cart" class="btn btn-primary">Cancel</a>
                  </div>
                  <hr class="my-3">
                  <div class="row">
                      <form action="/user/order" method="POST" class="mx-auto">
                          <script
                            src="https://checkout.stripe.com/checkout.js"
                            class="stripe-button"
                            data-key="pk_test_51J0lAwSBTKmiY4Wq3dvTEpgnYrpuJvsOSozCFtff0YFLgAxs5DkVQcrPnGdZGWbyL9xLfGOfYhIpBRJtuiJiOHzK00gy1m6Snj"
                            data-name="Book Srore"
                            data-description="Books"
                            data-amount="<%= totalPrice*100 %>"
                            data-currency="inr"
                            data-image="https://cdn3.iconfinder.com/data/icons/book-shop-category-ouline/512/Book_Shop_Category-10-512.png"></script>
                          </script>
                      </form>
                  </div>
              </div>
        </div>

 <%- include ('../includes/footer.ejs') %>
 