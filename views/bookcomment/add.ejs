<%- include ('../includes/header.ejs')  %>
<div class="jumbotron jumbotron-fluid">
    <div class="display-4 text-center">Add Comment</div>
    <div class="container">
        <hr class="my-3">
        <form method="POST" action="/book/<%= id %>/bookcomment/add">
            <div class="form-group">
                <label for="Title">Title</label>
                <input required type="text" class="form-control" id="Title" name="title" value="<%= typeof comment === 'undefined' ? '': comment.title %> ">
              </div>
                <div class="form-group">
                  <label for="content">Content</label>
                  <textarea required name="content" class="form-control" id="content" rows="3"><%= typeof comment === 'undefined' ? '': comment.content %></textarea>
                </div>
              <button type="submit" class="btn btn-primary">Add</button>
              <a type="button" href="/book/bookdetails/<%= id %>" class="btn btn-primary">Back to Book</a>
            
        </form>
     
    </div>
</div>   
<%- include ('../includes/footer.ejs') %>  